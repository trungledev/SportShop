@model IEnumerable<SportShop.Models.ProductViewModel>

@if(Model.Count() == 0)
{
    <div class="text-center text-secondary my-5">
                            <h2 class="fw-normal">Không có sản phẩm phù hợp</h2>
                            <i class="bi bi-box2 h1"></i>
                        </div>
}
else
{
  @foreach(var item in Model)
    {

    var pathImage = "/images/" + item.Category + ".png";

    <div class="col">
        <a asp-controller="Products" asp-action="Detail" asp-route-id="@item.Id" class="text-dark">
            <div class="card sanPham">
                <img src="@pathImage" class="card-img-top" alt="Image of product">
                <div class="card-body border-top">
                    <p class="card-title fw-bold">@Html.DisplayFor(modelItem => item.NameProduct)</p>
                    <small class="card-text text-secondary d-none d-md-block">@Html.DisplayFor(modelItem =>
                        item.Information)</small>
                </div>
                <div class="card-footer bg-white text-center">
                    <span>
                        <input id="star" type="hidden" class="rating" name="NumberOfStar" value="@item.AverageStar"
                            disabled />
                        @item.AverageStar
                        (@item.QuantityAllReview) </span>
                    <p class="card-text lead text-primary">@Html.DisplayFor(modelItem => item.Price) đ</p>
                    <button class="btn btn-primary" type="button">Mua ngay</button>
                </div>
            </div>
        </a>
    </div>
    }
    <script type="text/javascript" src="~/bootstrapRating/bootstrap-rating.js"></script>
}
  